@model Common.DTOs.LoginDto
@{
    ViewData["Title"] = "Home Page";
}

<h1>@ViewBag.Title</h1>
<div class="login-form">
    <form asp-controller="Home" asp-action="Login" method="post">
        <h2 class="text-center">Log in</h2>       
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Username" placeholder="Username" required="required" >
        </div>
        <div class="form-group">
            <input type="password" class="form-control" asp-for="Password" placeholder="Password" required="required">
        </div>
        <button class="btn btn-primary btn-block">Log in</button>
    </form>
</div>